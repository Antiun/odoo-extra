<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="public_user_website_alt" model="res.users">
            <field name="name">Public User (Alt)</field>
            <field name="login">Public User (Alt)</field>
            <field name="active" eval="True" />
            <field name="groups_id" eval="[(6,0,[ref('base.group_public'), ref('share.group_share_user')])]" />
        </record>


        <record id="website_alt" model="website">
            <field name="name">Alt</field>
            <field name="language_ids" eval="[(6,0,[ref('base.lang_en')])]" />
            <field name="default_lang_id" ref="base.lang_en" />
            <field name="user_id" ref="public_user_website_alt" />
        </record>

        <record id="website_alt_top_menu" model="website.menu">
            <field name="name">Top Menu (Alt)</field>
            <field name="website_id" ref="website_alt" />
            <field name="parent_id"></field>
             <field name="url"></field>
        </record>

        <record id="website_alt_homepage_menu" model="website.menu">
            <field name="name">HomepageAlt</field>
            <field name="website_id" ref="website_alt" />
            <field name="parent_id" ref="website_alt_top_menu" />
             <field name="url">/page/homepage</field>
        </record>

        <record id="website_alt_other_menu" model="website.menu">
            <field name="name">Other page Alt</field>
            <field name="website_id" ref="website_ip" />
            <field name="parent_id" ref="website_alt_top_menu" />
        	<field name="url">/page/website.other-alt-page</field>
        </record>



    </data>
</openerp>
