<openerp>
<data>

<template id="submenu" inherit_id="website.submenu" name="Only published submenu">
    <xpath expr="//li[@t-if='not submenu.child_id']" position="attributes">
        <attributes name="t-if">not submenu.child_id and submenu.published</attributes>
    </xpath>
    <xpath expr="//li[@t-if='submenu.child_id']" position="attributes">
        <attributes name="t-if">submenu.child_id and submenu.published</attributes>
    </xpath>
</template>

</data>
</openerp>
