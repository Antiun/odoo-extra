    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_website_multi_layout_tree"/>
    <field name="context">{'search_default_group_by_website_id': 1}</field>
    <field name="search_view_id" ref="view_website_multi_layout_search"/>
