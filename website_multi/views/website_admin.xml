<record id="view_website_menu_search" model="ir.ui.view">
    <field name="name">website.menu.search</field>
    <field name="model">website.menu</field>
    <field name="arch" type="xml">
        <search string="Search Website menu">
            <field name="name"/>
            <field name="url"/>
            <field name="website_id"/>
            <group expand="0" string="Group By">
                <filter name="group_by_website_id" string="Website" context="{'group_by':'website_id'}"/>
            </group>
        </search>
    </field>
</record>


<record id="action_website_menu_tree" model="ir.actions.act_window">
    <field name="name">Website Menu</field>
    <field name="res_model">website.menu</field>
    <field name="view_mode">list</field>
    <field name="context">{'search_default_group_by_website_id': 1}</field>
    <field name="search_view_id" ref="view_website_menu_search"/>
</record>

