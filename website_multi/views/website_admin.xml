<!--
- List of layouts: ir.ui.view, layout=True
    - Filtrar/agrupar por website
    - Filtrar/agrupar por theme
-->

<record id="view_website_layout_tree" model="ir.ui.view">
    <field name="name">website.layout.tree</field>
    <field name="model">ir.ui.view</field>
    <field name="arch" type="xml">
        <tree string="Website Layouts">
            <field name="priority" string="Sequence"/>
            <field name="name"/>
            <field name="website_id"/>
            <field name="theme_id"/>
            <field name="xml_id"/>
            <field name="key"/>
            <field name="inherit_id"/>
        </tree>
    </field>
</record>

<record id="view_website_layout_form" model="ir.ui.view">
    <field name="name">website.layout.form</field>
    <field name="model">ir.ui.view</field>
    <field name="arch" type="xml">
        <form string="Website layout">
            <sheet>
                <div class="oe_right oe_button_box" name="buttons">
                    <button type="action"
                        class="oe_stat_button"
                        id="multi_layout_button"
                        icon="fa-sitemap"
                        name="%(website_multi.action_website_multi_layout_tree)d"
                        context="{'search_default_view_id': active_id, 'default_view_id': active_id}">
                        <div>
                        <!--
                        <strong><field name="multi_layout_count"/></strong><br/>
                        -->
                        Multi-inherit layouts</div>
                    </button>
                </div>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="type" invisible="1"/>
                        <field name="model" invisible="1"/>
                        <field name="website_id"/>
                        <field name="theme_id"/>
                        <field name="key"/>
                        <field name="priority"/>
                    </group>
                    <group>
                        <field name="field_parent" invisible="1"/>
                        <field name="inherit_id"/>
                        <field name="mode"/>
                        <field name="model_data_id"/>
                        <field name="xml_id"/>
                        <field name="active"/>
                    </group>
                </group>
                <notebook>
                    <page string="Architecture">
                        <field name="arch"/>
                    </page>
                    <page string="Groups">
                        <field name="groups_id"/>
                    </page>
                    <page name="inherit_children" string="Inherited Views">
                        <field name="inherit_children_ids"
                               context="{'default_model':model, 'default_type':type, 'default_inherit_id':active_id}">
                            <tree>
                                <field name="priority"/>
                                <field name="name"/>
                                <field name="xml_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="view_website_layout_search" model="ir.ui.view">
    <field name="name">website.layout.search</field>
    <field name="model">ir.ui.view</field>
    <field name="arch" type="xml">
        <search string="Search Website Layout">
            <field name="name"/>
            <field name="key"/>
            <field name="website_id"/>
            <field name="theme_id"/>
        </search>
    </field>
</record>


<record id="action_website_layout_tree" model="ir.actions.act_window">
    <field name="name">Website layouts</field>
    <field name="res_model">ir.ui.view</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('is_layout', '=', True)]</field>
    <field name="context">{'default_type': 'qweb'}</field>
    <field name="view_id" ref="view_website_layout_tree"/>
    <field name="search_view_id" ref="view_website_layout_search"/>
</record>


